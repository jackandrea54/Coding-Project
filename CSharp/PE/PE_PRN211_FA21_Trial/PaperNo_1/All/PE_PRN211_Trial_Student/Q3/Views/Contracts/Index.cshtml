@model IEnumerable<Q3.Models.Contract>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Index";
}

<h1>List of contracts</h1>
<form asp-action="Index" method="get">
    <select name="customerId" asp-items="@ViewBag.CustomerIds" onchange="this.form.submit()"></select>
</form>
<table class="table">
    <thead>
        <tr>
            <th style="text-align:left; width:120;">
                Code
            </th>      
            <th style="text-align:left; width:200;">
                Customer
            </th>
            <th style="text-align:left; width:200;">
                Employee
            </th>
            <th style="text-align:left; width:120;">
                Type
            </th>
            <th style="text-align:left; width:120;">
                SignedDate
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Code
            </td>
            <td>
                @item.Customer.CustomerName
            </td>
            <td>
                @item.Employee.EmployeeName
            </td>                
            <td>
                @item.Type
            </td>            
            <td>
                @(item.SignedDate.ToString("dd/MM/yyyy"))
            </td>
       </tr>
}
    </tbody>
</table>
