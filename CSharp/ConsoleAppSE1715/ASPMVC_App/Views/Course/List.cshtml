@using ASPMVC_App.Models
@model List<Course>

@{
}
<!doctype html>
<html>
<head>
    <title>Web App</title>
</head>
<body>
    <div style="float:left; width: 45%">
        <h3>Subject</h3>
        <ul>
            <li><a href="/Course/List">All subjects</a></li>
            @foreach(Subject s in ViewBag.subjects)
            {
                <li><a href="/Course/List/@s.SubjectId">@s.SubjectName</a></li>
            }
        </ul>
    </div>
    <div style="float:right; width: 55%">
        <h3>List of all courses (in all subjects)</h3>
        @if(Model.Count == 0)
        {
            <p>Không có đâu</p>
        }
        @foreach(Course c in Model)
        {
            <span>@c.CourseCode-@c.CourseDescription</span>
            <a href="/Course/Detail/@c.CourseId">Go Detail</a>
            <a href="/Course/Edit/@c.CourseId">Edit</a>
            <a href="/Course/Delete/@c.CourseId">Delete</a><br/>
        }
    </div>
</body>
</html>
