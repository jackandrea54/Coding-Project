@using WebAppMVC.Models
@{
    // nhan thong tin truyen tu Controller
    Student data = ViewData["Data"] as Student;
}

@ViewData["Message"]
<br /> Code: @data.Code
<br /> Name: @data.Name
<br /> Age: @data.Age
<br /> Age: @ViewBag.Message1
<br /> Age: @ViewBag.Data1.Code
<br /> Age: @ViewBag.Data1.Name
<br /> Age: @ViewBag.Data1.Age
<br />
<a asp-controller="Student" asp-action="Add">Create new Student</a>

<br /> List students:
<table border="1">
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Age</td>
    </tr>
    @foreach (Student s in ViewBag.students)
    {
        <tr>
            <td>@s.Code</td>
            <td>@s.Name</td>
            <td>@s.Age</td>
        </tr>
    }
</table>


