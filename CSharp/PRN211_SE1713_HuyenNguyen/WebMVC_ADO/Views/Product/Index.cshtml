@{
}
@using WebMVC_ADO.Models
<table border="1">
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Price</td>
        <td>Stock</td>
        <td>Image</td>
        <td>Category</td>
    </tr>
    @foreach (Product p in ViewBag.Data)
    {
        <tr>
            <td>@p.ProductId</td>
            <td>@p.ProductName</td>
            <td>@p.UnitPrice</td>
            <td>@p.UnitsInStock</td>
            <td>@p.Image</td>
            <td>@p.CategoryId</td>
        </tr>
    }
</table>
