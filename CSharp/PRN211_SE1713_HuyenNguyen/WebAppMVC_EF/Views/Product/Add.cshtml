@{
}
@using WebAppMVC_EF.Models
@model Product
<form asp-controller="Product" asp-action="Add" method="post">
    Name: <input type="text" asp-for="ProductName" /> <br />
    Price: <input type="text" asp-for="UnitPrice" /> <br />
    Stock: <input type="text" asp-for="UnitsInStock" /> <br />
    Image: <input type="text" asp-for="Image" /> <br />
    Category:
    <select asp-for="CategoryId">
        <option value="0">All</option>
        @foreach (Category c in ViewBag.categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select> <br />
    <input type="submit" value="ADD"/> <br />
</form>